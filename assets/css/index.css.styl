@import "_variables"
@import "_skins"
blue = rgb(0, 174, 245, 1)
.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0
/* Space out content a bit */
body
  padding-top 20px
  padding-bottom 20px
  position relative
/* Everything but the jumbotron gets side spacing for mobile first views */
.header, .marketing, .footer
  padding-left 15px
  padding-right 15px
/* Custom page header */
.header
  border-bottom 1px solid #e5e5e5
  /* Make the masthead heading the same height as the navigation */
  h3
    margin-top 0
    margin-bottom 0
    line-height 40px
    padding-bottom 19px
/* Custom page footer */
.footer
  padding-top 19px
  color #777
  border-top 1px solid #e5e5e5
.container-narrow > hr
  margin 30px 0
/* Main marketing message and sign up button */
.jumbotron
  font-family "Helvetica Neue", Helveltica
  margin-top 20px
  padding-top 5px
  text-align center
  border-bottom 1px solid #e5e5e5
  .btn
    font-size 21px
    padding 14px 24px
/* Supporting marketing content */
.marketing
  margin 40px 0
  p + h4
    margin-top 28px
.text-muted
  font-family "Helvetica Neue", "Raleway", Helveltica
  font-weight 300
  font-size 50px
  font-weight lighter
  line-height 1
  letter-spacing 1px
  img
    vertical-align 0
.nav-pills > li.active > a, .nav-pills > li.active > a:hover, .nav-pills > li.active > a:focus
  color #fff
  background-color blue
a
  color blue
  text-decoration none
.btn-success
  background-color blue
  border-color darken(blue, 10%)
  &:hover
    background-color darken(blue, 10%)
    border-color darken(blue, 20%)
.navbar-brand
  max-height 30px
  overflow visible
  padding-top 8px
.scrollup
  padding 10px
  text-align center
  background whiteSmoke
  font-weight bold
  color #aaa
  text-decoration none
  position fixed
  bottom 40px
  right 40px
  &:hover
    text-decoration none
.glyphicon-heart
  color #a93c38
.desc
  font-size 18px
  font-weight lighter
  letter-spacing 1px
  color lighten(rgb(51, 51, 51, 1), 30%)
.center
  text-align center
.http
  color green
.params
  color olive
/* Responsive: Portrait tablets and up */
@media screen and (min-width: 768px)
  .container
    max-width 730px
  /* Remove the padding we set earlier */
  .header, .marketing, .footer
    padding-left 0
    padding-right 0
  /* Space out the masthead */
  .header
    margin-bottom 30px
  /* Remove the bottom border on the jumbotron for visual effect */
  .jumbotron
    border-bottom 0
